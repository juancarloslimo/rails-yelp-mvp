<div class="container">
  <div class="row">
    <div class="col">
      <h1>New Review</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit 'Save review', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
